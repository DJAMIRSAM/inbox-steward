APP_NAME=Inbox Steward
ENVIRONMENT=development
LOG_LEVEL=INFO
INBOX_STEWARD_PORT=8003
DATABASE_URL=postgresql+psycopg2://inbox_steward:inbox_steward@db:5432/inbox_steward
REDIS_URL=redis://redis:6379/0
MAIL_BACKEND=IMAP
IMAP_HOST=outlook.office365.com
IMAP_PORT=993
IMAP_ENCRYPTION=SSL
IMAP_AUTH_TYPE=LOGIN
IMAP_USERNAME=example@outlook.com
IMAP_PASSWORD=getanapppassword
# Required when IMAP_AUTH_TYPE=XOAUTH2
# IMAP_OAUTH2_TOKEN=ya29...yourtoken
IMAP_MAILBOX=INBOX
IMAP_ARCHIVE_MAILBOX=Archive
# Exchange configuration (enable when MAIL_BACKEND=EXCHANGE)
# EXCHANGE_TENANT_ID=00000000-0000-0000-0000-000000000000
# EXCHANGE_CLIENT_ID=00000000-0000-0000-0000-000000000000
# EXCHANGE_CLIENT_SECRET=super-secret
# EXCHANGE_USER_ID=example@outlook.com
# EXCHANGE_SCOPE=https://graph.microsoft.com/.default
# Switch to delegated login for personal Microsoft accounts
# EXCHANGE_LOGIN_MODE=DELEGATED
# EXCHANGE_SCOPE=offline_access Mail.ReadWrite Mail.ReadWrite.Shared
# EXCHANGE_TOKEN_CACHE=/data/exchange/token.json
EXCHANGE_TIMEOUT=30
TIMEZONE=America/Vancouver
POLL_INTERVAL_SECONDS=120
FULL_SORT_INTERVAL_MINUTES=180
OLLAMA_ENDPOINT=http://ollama.local:11434
OLLAMA_MODEL=gpt-oss:20b
HOME_ASSISTANT_BASE_URL=http://homeassistant.local:8123
HOME_ASSISTANT_TOKEN=tokenhere
HOME_ASSISTANT_MOBILE_TARGET=notify.mobile_app
WEB_ADMIN_PASSWORD=change-me
SECRET_KEY=super-secret
PDF_TEMP_DIR=/data/pdfs
